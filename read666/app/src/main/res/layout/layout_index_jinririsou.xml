<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/jinriresouLay"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="今日热搜"
            android:textColor="#ff232122"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/jiantou2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/jiantou2"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="#ff999999" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffebebeb" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/resouLay1"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_resou_1_n"
                    android:textColor="#Caa34E"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/resouTv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:lines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/shape_corner_resou_1_n"
                    android:textColor="#B79B64"
                    android:textSize="13dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resouLay2"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="2"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_ask"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/resouTv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/shape_corner_ask"
                    android:textSize="13dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:lines="1"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/resouLay3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="3"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_resou_3_p"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/resouTv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/shape_corner_resou_3_p"
                    android:textSize="13dp"
                    android:lines="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resouLay4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="4"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_resou_4_p"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/resouTv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/shape_corner_resou_4_p"
                    android:textSize="13dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:lines="1"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/resouLay5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="5"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_resou_5_p"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/resouTv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/shape_corner_resou_5_p"
                    android:textSize="13dp"
                    android:lines="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resouLay6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="6"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_corner_resou_1_n"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/resouTv6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="就这样心想事成"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/shape_corner_resou_1_n"
                    android:textSize="13dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:lines="1"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
