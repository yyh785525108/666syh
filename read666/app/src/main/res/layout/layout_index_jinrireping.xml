<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/repingLay"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <com.yyh.read666.view.YuanjiaoImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hot_comment"

            />
        <TextView
            android:id="@+id/tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="今日热评"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFFFF" />
        <RelativeLayout
            android:layout_below="@+id/tips1"

            android:background="@drawable/shape_corner_reping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/repingContentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:textColor="#FFFFFFFF"
                android:text=""
                android:padding="6dp"
                android:lines="3"
                android:textSize="14dp"/>
            <RelativeLayout
                android:layout_below="@id/repingContentTv"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yyh.read666.view.CircleImageView
                    android:id="@+id/repingImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/repingNickNameTv"

                    android:layout_toRightOf="@+id/repingImg"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="6"
                    android:textColor="#FFFFFFFF"
                    android:text="彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色彩色v彩色彩色彩色"
                    android:padding="6dp"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/repingTitleTv"

                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:text="124141241"
                    android:padding="6dp"
                    android:maxLength="16"
                    android:textSize="11dp"/>
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corner_zise"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/dayTv"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:text="20"
            android:textSize="24dp"/>
        <TextView
            android:id="@+id/yearTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:text="2110 Mar"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"/>
    </LinearLayout>
</RelativeLayout>
