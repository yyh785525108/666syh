<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/statusLay"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:background="@drawable/return_btn" />

        <TextView
            android:id="@+id/statusTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="10"
            android:text="搜索"
            android:textColor="#ff232122"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sousuoLay"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_corner_gray">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/souEt"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="12dp"
            android:hint="一分钟说话"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/otherLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/jinriresouLay"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:text="今日热搜"
                    android:textColor="#ff232122"
                    android:textSize="14dp" />




            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/resouLay1"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:lines="1"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12dp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/resouLay2"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textSize="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:lines="1"
                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/resouLay3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12dp"
                            android:lines="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/resouLay4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textSize="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:lines="1"
                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/resouLay5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12dp"
                            android:lines="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/resouLay6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="1"
                            android:gravity="center"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/huo"
                            android:textColor="#Caa34E"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:id="@+id/resouTv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="就这样心想事成"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textSize="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:lines="1"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:text="历史搜索"
                    android:textColor="#ff232122"
                    android:textSize="14dp" />

            </RelativeLayout>
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ListView
            android:id="@+id/souResultListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>



</LinearLayout>
