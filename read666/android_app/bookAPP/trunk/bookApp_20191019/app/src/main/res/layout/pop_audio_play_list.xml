<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="right"
        android:orientation="vertical">

        <com.tchy.syh.listen.view.ImageTextButton
            android:id="@+id/tv_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_marginRight="16dp"
            android:background="#00000000"
            app:itb_bg="#00000000"
            app:itb_bg_pressed="#00000000"
            app:itb_icon="@mipmap/asc"
            app:itb_icon_position="right"
            app:itb_icon_size="18dp"
            app:itb_icon_text_marggin="9dp"
            app:itb_text="正序"
            app:itb_text_size="14sp" />
        <View
            android:background="@color/dividerColorDarkThemeLight"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:orientation="vertical">

        <View
            android:background="@color/dividerColorDarkThemeLight"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="关闭"
            android:textColor="#ff232122" />
    </LinearLayout>
</LinearLayout>