<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rimenLay"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="本周热门  TOP5"
            android:textColor="#ff232122"
            android:textSize="16dp"

           />

        <ImageView
            android:id="@+id/jiantou2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/jiantou2"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="#ff999999" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/ViewColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/benzhouRemenLay0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remenImg0"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/yinping_logoimg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/remenNameTv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="做最好的自己"
                    android:textColor="#ff232122"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/remenContentTv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remenNameTv0"
                    android:layout_alignLeft="@+id/remenNameTv0"
                    android:layout_marginTop="4dp"
                    android:text="明心见性开悟走修行之路，获智慧人生"
                    android:textColor="#ff999999"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/remenTimeTv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="2019.03.03上架"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/huo4"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/remenTimeTv0"
                    android:layout_marginRight="12dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/huo" />
                <TextView
                    android:id="@+id/remenCountTv0"
                    android:layout_alignTop="@+id/remenTimeTv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/huo4"
                    android:text="123456"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="11dp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/ViewColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/benzhouRemenLay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/remenImg1"
                    android:layout_width="60dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yinping_logoimg" />

                <TextView
                    android:id="@+id/remenNameTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLength="5"
                    android:text="我是书名"
                    android:textColor="#ff232122"
                    android:textSize="12dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/benzhouRemenLay2"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/remenImg2"
                    android:layout_width="60dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yinping_logoimg" />

                <TextView
                    android:id="@+id/remenNameTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLength="5"
                    android:text="我是书名"
                    android:textColor="#ff232122"

                    android:textSize="12dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/benzhouRemenLay3"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/remenImg3"
                    android:layout_width="60dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yinping_logoimg" />

                <TextView
                    android:id="@+id/remenNameTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLength="5"
                    android:text="我是书名"
                    android:textColor="#ff232122"

                    android:textSize="12dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/benzhouRemenLay4"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/remenImg4"
                    android:layout_width="60dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yinping_logoimg" />

                <TextView
                    android:id="@+id/remenNameTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLength="5"
                    android:text="我是书名"
                    android:textColor="#ff232122"

                    android:textSize="12dp" />



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
