<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.yyh.read666.view.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="16dp"
                android:src="@drawable/head" />
            <com.yyh.read666.view.CircleImageView
                android:id="@+id/vipImg"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:scaleType="centerCrop"
                android:layout_alignRight="@+id/headImg"
                android:layout_alignBottom="@+id/headImg"
                android:src="@drawable/v" />
            <TextView
                android:id="@+id/nameTv"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/headImg"
                android:text="叶的玩玩"
                android:layout_marginTop="6dp"

                android:textColor="#FF838A96"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/timeTv"
                android:layout_alignTop="@id/nameTv"
                android:layout_alignBottom="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-14"
                android:textColor="#FF838A96"
                android:layout_toRightOf="@+id/dengjiTv"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dengjiTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圣人"
                android:layout_alignTop="@id/nameTv"
                android:layout_alignBottom="@+id/nameTv"
                android:textColor="#ff333333"
                android:layout_toRightOf="@+id/nameTv"
                android:layout_marginLeft="4dp"
                android:textSize="12dp" />


            <LinearLayout
                android:id="@+id/dianzanLay"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dianzanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginRight="4dp"
                    android:textColor="#838383"
                    android:textSize="15dp" />
                <ImageView
                    android:id="@+id/dianZanImg"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/love_btns" />


            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/headImg"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/headImg"
            android:text="作业："
            android:lineSpacingMultiplier="1.2"
            android:textColor="#ff444444"
            android:textSize="14dp" />

        <com.yyh.read666.view.MyListView
            android:id="@+id/replyListView"
            android:layout_marginLeft="56dp"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:focusable="false"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/ViewColor" />

</LinearLayout>