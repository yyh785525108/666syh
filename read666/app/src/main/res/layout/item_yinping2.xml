<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/yinpingLay"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/dateTv"
            android:singleLine="true"
            android:text="第12课（梦想篇）人要有"
            android:textColor="#ff232122"
            android:textSize="15dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/play_num" />

            <TextView
                android:id="@+id/countTv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="156456"
                android:textColor="#ff999999"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/countTv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"

                android:src="@drawable/duration" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="08:15"
                android:textColor="#ff999999"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tagTv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="置顶"
                android:textColor="@android:color/holo_red_dark"
                android:paddingTop="2dp"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:background="@drawable/shape_corner_zhiding"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:text="2019/12/22"
                android:textColor="#ff999999"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/ViewColor" />

</LinearLayout>