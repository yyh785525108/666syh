<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tips1T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="已有"
            android:textColor="#ff232122" />
        <TextView
            android:id="@+id/zuoyeCountTv"
            android:layout_toRightOf="@+id/tips1T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="#FF5FC4FF" />
        <TextView
            android:layout_toRightOf="@+id/zuoyeCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:text="人做了作业"
            android:textColor="#ff232122" />

        <ImageView
            android:id="@+id/jiantou2"
            android:visibility="invisible"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/icon_jiantou" />

        <TextView
            android:id="@+id/zuoyeAllCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/jiantou2"
            android:gravity="center_vertical"
            android:text="总计 66 条"
            android:textColor="#ff999999" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yyh.read666.view.MyListView
            android:id="@+id/zuoyeListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>




    </LinearLayout>


</LinearLayout>
