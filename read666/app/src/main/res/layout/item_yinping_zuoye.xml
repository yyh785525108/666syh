<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <com.yyh.read666.view.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/head" />
            <com.yyh.read666.view.CircleImageView
                android:id="@+id/vipImg"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:scaleType="centerCrop"
                android:layout_alignRight="@+id/headImg"
                android:layout_alignBottom="@+id/headImg"
                android:src="@drawable/v" />
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/headImg"
                android:text="叶的玩玩"
                android:layout_marginTop="6dp"
                android:textColor="#ff333333"

                android:textSize="13dp" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:textColor="#FF838A96"

                android:layout_below="@+id/nameTv"
                android:layout_alignLeft="@+id/nameTv"
                android:textSize="10dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/content1Tv"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/headImg"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/headImg"
            android:text="作业："
            android:lines="1"
            android:textColor="#ff232122"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/content2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/headImg"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/headImg"
            android:text="笔记："
            android:lines="1"
            android:textColor="#ff232122"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/content3Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/headImg"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/headImg"
            android:text="决定："
            android:lines="1"
            android:textColor="#ff232122"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffebebeb" />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/viewsLay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="11dp"
                android:layout_height="16dp"
                android:src="@drawable/task_browse_p" />
            <TextView
                android:id="@+id/viewsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/contentLay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="20dp"
                android:src="@drawable/task_comment_n" />
            <TextView
                android:id="@+id/cmt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/dianzan2Lay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dianZanImg"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/love_btns" />
            <TextView
                android:id="@+id/dianzanCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp" />



        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#ffebebeb" />

</LinearLayout>