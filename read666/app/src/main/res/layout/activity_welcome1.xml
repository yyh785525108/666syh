<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/welcome_bg"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到"
            android:textSize="29dp"
            android:textColor="#161616"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666书友会"
            android:textSize="36dp"
            android:textColor="#161616"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/weixinLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_login_blue"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/dp_18"
        android:textColor="#FFFFFF"
        android:text="微信登录"/>
    <Button
        android:id="@+id/phoneLogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_login_gray"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/dp_18"
        android:textColor="#5d667A"
        android:text="手机号登录"/>

    <Button
        android:id="@+id/suibianBtn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/dp_14"
        android:textColor="#838a96"
        android:text="随便看看"/>


</LinearLayout>
