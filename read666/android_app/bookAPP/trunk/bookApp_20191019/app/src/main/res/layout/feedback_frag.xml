<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

<variable
    name="vm"
    type="com.tchy.syh.my.feedback.FeedBackVM"/>


    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dividerColorThemeLight"
        android:orientation="vertical">
        <com.tchy.syh.custom.toolbar.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            binding:isShowRightButton="false"
            binding:isShowSearchView="false"
            binding:toolbarTitle="意见反馈"
            binding:isShowLeftButton="true"
            binding:leftButtonIcon="@mipmap/back_black_small"

            >

        </com.tchy.syh.custom.toolbar.CustomToolbar>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_alignParentBottom="true">
            <Button
                style="@style/filledBtn"
                android:text="提交"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                binding:onClickCommand="@{vm.submitClick}"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/bottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="反馈描述"
                        android:textColor="#333"
                        android:textSize="16sp"
                       android:layout_margin="16dp"
                        />
                </LinearLayout>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    onCheckedChangedCommand="@{vm.typeChanged}"
                    >
                    <RadioButton
                        android:id="@+id/bug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"
                        android:textColor="@drawable/combo_font_color_selector"
                        android:background="@drawable/feedback_type_selector"
                        android:textSize="14sp"

                        android:checked="true"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        />
                    <RadioButton
                        android:id="@+id/suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发现故障"
                        android:textSize="14sp"
                        android:button="@null"
                        android:textColor="@drawable/combo_font_color_selector"
                        android:background="@drawable/feedback_type_selector"
                        android:paddingHorizontal="10dp"
                        android:layout_marginLeft="10dp"
                        android:paddingVertical="5dp"
                        />
                    <RadioButton
                        android:id="@+id/others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他反馈"
                        android:button="@null"
                        android:textColor="@drawable/combo_font_color_selector"
                        android:background="@drawable/feedback_type_selector"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        />
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="请详细描述您所遇到的问题，以便我们为您及时解决！"
                        android:gravity="top"
                        android:text="@={vm.desc}"
                        android:padding="16dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imgList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/plus_enable"
                        android:layout_marginLeft="20dp"
                        android:visibility="@{vm.imgList.size>=3?8:0}"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式："
                        android:textSize="14sp"
                        android:textColor="#333"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:text="@={vm.contact}"
                        android:hint="请输入您的手机号，QQ号或邮箱等"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</layout>