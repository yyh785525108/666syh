<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    android:orientation="vertical">

    <include layout="@layout/layout_top" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





    <LinearLayout
        android:layout_marginLeft="20dp"

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.yyh.read666.view.CircleImageView
            android:id="@+id/headImg"
            android:layout_width="40dp"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="落地你的每一本书"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="从完成作业开始"
            android:textColor="#ff333333"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="12dp" />
    </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="#ffebebeb"/>

    <TextView
        android:id="@+id/ask1Tv"
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/askTips"
        android:layout_marginRight="16dp"
        android:text="作业1"
        android:textColor="#ff333333"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="16dp" />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/daan1Et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignLeft="@id/tips3Tv"
        android:gravity="top|left"

        android:padding="4dp"
        android:layout_below="@id/tips3Tv"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_gray"
        android:hint="写作业是落地的第一步，加油"
        android:lines="1"
        android:textSize="14dp"

        />
    <TextView
        android:id="@+id/ask2Tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/askTips"
        android:layout_marginRight="16dp"
        android:text="作业2"
        android:textColor="#ff333333"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/daan2Et"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignLeft="@id/tips3Tv"
        android:gravity="top|left"
        android:padding="4dp"
        android:layout_below="@id/tips3Tv"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_gray"
        android:hint="写作业是落地的第一步，加油"
        android:lines="1"
        android:textSize="14dp"

        />
    <TextView
        android:id="@+id/ask3Tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/askTips"
        android:layout_marginRight="16dp"
        android:text="作业3"
        android:textColor="#ff333333"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/daan3Et"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignLeft="@id/tips3Tv"
        android:gravity="top|left"
        android:padding="4dp"
        android:layout_below="@id/tips3Tv"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_gray"
        android:hint="写作业是落地的第一步，加油"
        android:lines="1"
        android:textSize="14dp"

        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="书中对你印象最深的一句话"
        android:textColor="#ff333333"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/bijiEt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:gravity="top|left"
        android:padding="4dp"
        android:layout_below="@id/tips3Tv"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_gray"
        android:hint="分享你的读书笔记吧！"
        android:lines="3"
        android:textSize="14dp"

        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="看一本书，做一个决定"
        android:textColor="#ff333333"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/juedingEt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:gravity="top|left"
        android:padding="4dp"
        android:layout_below="@id/tips3Tv"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_gray"
        android:hint="决定决定命运，新的决定决定新的命运"
        android:lines="1"
        android:textSize="14dp"

        />


    <LinearLayout
        android:id="@+id/tongbuLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tongbuImg"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/gou_btns" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="同步到日精进"/>


    </LinearLayout>

    <Button
        android:id="@+id/fabiaoBtn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:textSize="@dimen/dp_17"
        android:textColor="#FFFFFF"
        android:text="发表"
        android:background="@drawable/shape_corner_fabiao"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        />
        </LinearLayout>

    </ScrollView>
</LinearLayout>